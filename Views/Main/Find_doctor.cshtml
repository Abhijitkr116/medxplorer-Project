<main aria-labelledby="title">
    <div class="Doctor-search bg-dark mh-75 w-100 position-relative">
        <div class="dashb-image bg-white h-100 w-100 d-flex flex-column gap-5 justify-content-center">
            <img class="w-100 h-100 position-absolute opacity-75" src="~/Content/images/Doctord.jpg" />
            <div class="content1 cont d-flex flex-column align-items-center">
                <h2>Find a <span class="auto-input"></span></h2>
                <p>Find the best doctors in these locations.</p>
            </div>
            <div class="content2 cont">


                @using (Html.BeginForm())
                {
                    <div class="content2-in d-flex justify-content-center gap-3">

                        @(Html.DropDownListFor(acc => acc.Specialist, new SelectList(Model.ListofSpecialist), "Add Specialist"))
                        @(Html.DropDownListFor(acc => acc.Doctor_Name, new SelectList(Model.ListofDoctors), "Add Doctor"))
                        @(Html.DropDownListFor(acc => acc.State, new SelectList(Model.ListofState), "Add State"))
                        @(Html.DropDownListFor(acc => acc.City, new SelectList(Model.ListofCity), "Add City"))

                    </div>
                    <div class="submit mt-5 d-flex justify-content-center"><input type="submit" class="btn btn-primary submitbtn" name="Search" value="search" /></div>
                }

            </div>
        </div>

    </div>






</main>
<style>
    .Doctor-search {
        height: 45vw;
        width: 100%;
        margin: 2vw 0 5vw 0;
    }

    .content1 {
    }

        .content1 h2 {
            font-size: 3.5vw;
        }

        .content1 p {
            font-size: 1.2vw;
        }

    .cont {
        z-index: 99;
    }

    #Specialist, #Doctor_Name, #State, #City {
        padding: 1% 4%;
        border: none;
    }
</style>



<script src="https://unpkg.com/typed.js@2.0.16/dist/typed.umd.js"></script>
<script>
    var typed = new Typed(".auto-input", {
        strings: ["Doctor", "General Physcian", "Cardiologist", "Neurologist", "Surgeon", "Dermatologist", "Cardiologist"],
        typeSpeed: 60,
        backSpeed: 30,
        loop: true
    })
</script>



