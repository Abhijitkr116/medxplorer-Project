<script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const searchButton = document.getElementById("searchButton");
            const suggestions = document.getElementById("suggestions");

            // Function to filter cards based on search term
            function filterCards(searchTerm) {
                const cards = document.querySelectorAll(".card.cardfr");

                cards.forEach(function (card) {
                    const cardTitle = card.querySelector(".card-title").textContent.toLowerCase();
                    const conditions = card.querySelector(".card-text").textContent.toLowerCase();

                    if (cardTitle.includes(searchTerm) || conditions.includes(searchTerm)) {
                        card.style.display = "block";
                    } else {
                        card.style.display = "none";
                    }
                });
            }

            // Function to update suggestions based on search term
            function updateSuggestions(searchTerm) {
                const cards = document.querySelectorAll(".card.cardfr");
                const suggestionsList = [];
                cards.forEach(function (card) {
                    const cardTitle = card.querySelector(".card-title").textContent.toLowerCase();
                    if (cardTitle.includes(searchTerm)) {
                        suggestionsList.push(cardTitle);
                    }
                });

                suggestions.innerHTML = "";
                if (suggestionsList.length > 0) {
                    suggestions.style.display = "block";
                    suggestionsList.forEach(function (suggestion) {
                        const suggestionItem = document.createElement("div");
                        suggestionItem.textContent = suggestion;
                        suggestionItem.style.cursor = "pointer";
                        suggestions.style.border = "1px solid black";
                        suggestions.style.borderRadius = "0.4vw";
                        suggestions.style.padding = "0.3vw";
                        suggestions.style.marginTop = "1vw";
                        suggestions.style.hover = "";
                        suggestionItem.addEventListener("click", function () {
                            searchInput.value = suggestion;
                            suggestions.style.display = "none";
                            filterCards(searchInput.value);
                        });
                        suggestions.appendChild(suggestionItem);
                    });
                } else {
                    suggestions.style.display = "none";
                }
            }

            // Add input event listener to the search input for real-time filtering and suggestions
            searchInput.addEventListener("input", function () {
                const searchTerm = searchInput.value.toLowerCase();
                filterCards(searchTerm);
                updateSuggestions(searchTerm);
            });

            // Add click event listener to the search button
            searchButton.addEventListener("click", function () {
                const searchTerm = searchInput.value.toLowerCase();
                filterCards(searchTerm);
            });
        });
</script>



