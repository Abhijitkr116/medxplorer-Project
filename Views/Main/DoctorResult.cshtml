@using MedXplorer.Models
@model List<DoctorInsertModel>
@{
    ViewBag.Title = "DoctorResult";
}


<div class="container-main d-flex">
    <div class="search-panel bg-success bg-opacity-50  align-items-center">

        <p>Find the best Doctors simply by choosing the Specialist, Doctor and Location</p>

        @using (Html.BeginForm())
        {
            <div class="content2-in d-flex flex-column gap-2">
                <input class="form-control" list="datalistOption1" id="exampleDataList" placeholder="Specialist, Condition">
                <datalist class="cont" id="datalistOption1">
                    <option value="Cardiologist">
                    <option value="Cardiologist (Heart)">
                    <option value="Diabities">
                    <option value="Endocrinologist">
                    <option value="General Physicist">
                    <option value="Surgeon">
                </datalist>

                <input class="form-control" list="datalistOption2" id="exampleDataList" placeholder="Doctor">
                <datalist class="cont" id="datalistOption2">
                    <option value="Dr. Vikash Kumar">
                    <option value="Dr. Sneha Sinha">
                    <option value="Dr. Manoj Singh ">
                    <option value="Dr. Snehanshu Sharma ">
                    <option value="Dr. Ritu Kumari">
                    <option value="Dr. Shailendra Kumar">
                    <option value="Dr. Nidhin Varghese">
                    <option value="Dr. Seema Verma">
                    <option value="Dr. Rehan Sharma">
                    <option value="Dr. Arun Sinha">
                    <option value="Dr. PK Sinha">
                </datalist>

                <input class="form-control" list="datalistOption3" id="exampleDataList" placeholder="Location">
                <datalist class="cont" id="datalistOption3">
                    <option value="Hazaribagh">
                    <option value="Ranchi">
                    <option value="Jamshedpur">
                    <option value="Dhanbad">
                    <option value="Tata">
                </datalist>
            </div>
            <div class="submit mt-3 d-flex justify-content-center"><input type="submit" class="btn btn-primary submitbtn" value="Seacrh" /></div>
        }
    </div>




        <div class="doctor-result w-75 p-3 bg-danger bg-opacity-25">

    @{
        List<DoctorInsertModel> doctorresult = Model;

        foreach (DoctorInsertModel data in doctorresult)
        {

            <div class="cards d-flex bg-light bg-opacity-75">
                <div class="image w-25 p-3">
                    <img src="https://edocsmc.in/images/upload/6221ae89d507a.png" class="w-100 h-100" />
                </div>

                <div class="contents w-100">
                    <div class="contents-in d-flex flex-column w-100 mt-2 p-3">
                        <div class="doctor-name w-100 pt-2">
                            <h2>@data.Doctor_Name</h2>
                        </div>
                        <div class="doctor-details w-100 d-flex">
                            <div class="doctor-details-1 dd d-flex flex-column">
                                <div class="specialist">
                                    <h4>@data.Specialist</h4>
                                </div>

                                <div class="location w-100 pt-3">
                                    <div class="location-in d-flex">
                                        <i class="ri-map-pin-line loc h-50"></i><p class="w-100"><span>@data.city</span><span>, @data.State</span></p>
                                    </div>

                                    <p class="address w-100">@data.Full_Address</p>
                                </div>

                            </div>

                            <div class="doctor-details-2 dd d-flex flex-column align-items-start justify-content-evenly">
                                <div class="contact d-flex">
                                    <i class="ri-phone-line"></i><p>@data.Contact_No</p>
                                </div>

                                <div class="time d-flex">
                                    <i class="ri-time-line time"></i><p><span>@data.Start_Time</span><span> - </span><span>@data.End_Time</span></p>
                                </div>

                                <div>
                                    <p>Fee : <span>@data.Fees</span>/-</p>
                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="button d-flex justify-content-center w-100">
                        <input class="btn btn-primary" type="submit" value="Book an appointment" />
                    </div>

                </div>
            </div>




            
            }

        }
        </div>
    </div>

        <style>
            .search-panel {
                position: sticky;
                top: 4.5rem;
                right: 8rem;
                width: 20vw;
                height: 86vh;
                padding: 0 2rem;
            }

                .search-panel p {
                    margin: 3vw 0;
                    color: lightgoldenrodyellow;
                    font-size: 1.4rem;
                    font-weight: 500;
                }

            .cards {
                margin-bottom: 3rem;
            }

            .image {
                height: 15vw;
            }

                .image img {
                    border: 1px solid black;
                }

            .address {
                padding-left: 1.8rem;
            }

            .location-in {
                margin-bottom: -2.5vh;
            }

            .time {
                /* margin-top: -0.5px;*/
            }

            i {
                font-size: 1.5rem;
                margin: -5px 5px 0 0;
            }

            .doctor-details-1 {
                width: 70%;
            }

            .doctor-details-2 {
                width: 30%;
            }

            .button {
                margin-bottom: 0.7rem;
            }
        </style>

















